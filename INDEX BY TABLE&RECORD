DECLARE 
  TYPE PRD_TYPE_REC IS RECORD
  (PTR_ID INTEGER(4),
   PTR_NAME VARCHAR2(50)
  );
  TYPE PRD_TYPE_TB IS TABLE OF PRD_TYPE_REC
  INDEX BY BINARY_INTEGER;
  PRT_TB PRD_TYPE_TB;
BEGIN
    SELECT * INTO PRT_TB(1)
    FROM PRODUCT
    WHERE ID = 4;
    
    SELECT * INTO PRT_TB(2)
    FROM PRODUCT
    WHERE ID = 9;
    
    FOR I IN PRD_TYPE_TB.COUNT LOOP
    DBNS_OUTPUT.PUT_LINE(PRT_TB(I).PTR_ID);
    END LOOP;
END;
