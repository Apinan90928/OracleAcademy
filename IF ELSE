/*รูปแบบที่1*/
DECLARE 
  P_VC01 VARCHAR2(50) := 'ABC';
BEGIN
  IF P_VC01 = 'ABC' THEN
    DBMS_OUTPUT.PUT_LINE('TRUE');
  ELSE
    DBMS_OUTPUT.PUT_LINE('FAIL');
  END IF;
END;

/*รูปแบบที่2*/
DECLARE
  P_INT01 INTEGER(3) := 452;
BEGIN
  IF P_INT01 < 0 THEN
    DBMS_OUTPUT.PUT_LINE(': < 0');
  ELSEIF P_INT01 > 0 THEN
    DBMS_OUTPUT.PUT_LINE(': > 0');
  ELSE
    DBMS_OUTPUT.PUT_LINE(': = 1');
  END IF;
 END;
